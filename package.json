{
  "name": "portal",
  "private": true,
  "version": "4.2.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:packages": "bun run --cwd packages/core build && bun run --cwd packages/metaport build",
    "build:mainnet": "bun run build:packages && NETWORK_NAME=mainnet bash scripts/build.sh",
    "build:testnet": "bun run build:packages && NETWORK_NAME=testnet bash scripts/build.sh",
    "build:base-sepolia-testnet": "bun run build:packages && NETWORK_NAME=base-sepolia-testnet bash scripts/build.sh",
    "build:qa": "bun run build:packages && NETWORK_NAME=legacy bash scripts/build.sh",
    "dev": "bun run build:packages && vite",
    "dev:portal": "vite",
    "dev:watch": "bunx concurrently -k -n CORE,METAPORT,PORTAL -c cyan,magenta,green 'bun run --cwd packages/core dev' 'bun run --cwd packages/metaport dev' 'bun run dev:portal'",
    "build": "bun run build:mainnet",
    "lint": "eslint ./src --ext ts,tsx",
    "preview": "vite preview",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,mdx}\""
  },
  "dependencies": {
    "@/core": "workspace:*",
    "@mui/icons-material": "7.3.2",
    "@mui/material": "7.3.2",
    "@skalenetwork/metaport": "workspace:*",
    "@skalenetwork/skale-contracts-ethers-v6": "2.0.0-develop.5",
    "@transak/transak-sdk": "^3.1.1",
    "@vercel/analytics": "^1.0.2",
    "@wagmi/core": "^2.22.1",
    "boring-avatars": "^2.0.4",
    "embla-carousel-react": "^8.3.0",
    "ethers": "^6.15.0",
    "react": "19.1.1",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "19.1.1",
    "react-helmet": "^6.1.0",
    "react-jazzicon": "^1.0.4",
    "react-router-dom": "^7.8.2",
    "react-social-icons": "^6.17.0",
    "siwe": "^3.0.0",
    "tslog": "^4.10.2"
  },
  "devDependencies": {
    "@mdx-js/rollup": "^3.1.1",
    "@types/react-copy-to-clipboard": "^5.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "prettier": "^3.0.3",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@types/react-helmet": "^6.1.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.2",
    "bun-types": "^1.2.21",
    "eslint": "^8.45.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "sass": "^1.65.1",
    "typescript": "^5.0.2",
    "vite": "^7.1.5",
    "vite-plugin-vercel": "^9.0.7",
    "concurrently": "^9.0.1"
  },
  "overrides": {
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@mui/material": "7.3.2",
    "@mui/icons-material": "7.3.2"
  }
}